
// Hay que revisarlo en base al de Linux


NAME = so_long
CC = gcc
CFLAGS = -Wall -Werror -Wextra
INCLUDE = inc/
FOLDER = srcs/
OBJFOLDER = obj/
SRCS = main.c checks.c error.c get_next_line.c get_next_line_utils.c map.c queue.c utils.c ft_split.c
OBJS = $(SRCS:%.c=$(OBJFOLDER)%.o)

MINILIBX = mlx/libmlx.a 
PATHMINILIBX = mlx/
MLX_FLAGS = -Lmlx -lmlx -L/usr/X11/lib -lXext -lX11 -framework OpenGL -framework AppKit

$(OBJFOLDER)%.o: $(FOLDER)%.c 
	@mkdir -p $(OBJFOLDER)
	$(CC) $(CFLAGS) -I$(INCLUDE) $(MINILIBX) $(MLX_FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	@make -C $(PATHMINILIBX)
	$(CC) -o $(NAME) $(OBJS) 

all: $(NAME)

clean:
	@make clean -C $(PATHMINILIBX)
	@rm -rf $(OBJFOLDER)

fclean: clean
	@rm -f $(MINILIBX)
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re